@model IEnumerable<ShoppingJewellery.Models.AdminLoginMst>

@{
    ViewBag.Title = "ManageAdmin";
    Layout = "~/Views/Layout/_LayoutHomeAdmin.cshtml";
}

<h2>ManageAdmin</h2>
<p>
    @Html.ActionLink("Add Admin","Login")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.role)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.role)
        </td>
        <td>
            @Html.ActionLink("Delete", "DelAdmin", new { id=item.Username,@OnClick="return confirm('Are you want delete "+item.Username+"' ?)" })
        </td>
    </tr>
}

</table>
