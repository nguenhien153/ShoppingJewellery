@model ShoppingJewellery.Models.UserRegMst

@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Layout/MyLayout.cshtml";
}

<h2>ChangePass</h2>
@if (Session["check"] != null)
{
    string message = Session["check"].ToString();
    <script>
        alert(message);
    </script>
    Session["check"] = null;
}
@using (Html.BeginForm("ChangePass", "User", FormMethod.Post))
{
    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Old Password:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="email" placeholder="Enter username" name="oldpass">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">New Password:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="NewPass">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Connfirm New Password:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="cNewPass">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Details", "User")
</div>
