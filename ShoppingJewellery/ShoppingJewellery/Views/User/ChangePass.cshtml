@model ShoppingJewellery.Models.UserRegMst

@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Layout/MyLayout.cshtml";
}


@if (Session["check"] != null)
{
    string message = Session["check"].ToString();
    <script>
        alert(message);
    </script>
    Session["check"] = null;
}
    <div class="container">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-md-9">
                <div class="form-inline">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-7"><h2>ChangePass</h2></div>
                </div>
                <br>
                @using (Html.BeginForm("ChangePass", "User", FormMethod.Post))
                {
                    <div class="form-inline">
                        <label class="control-label col-sm-4" for="email">Old Password:</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="email" placeholder="Enter username" name="oldpass" style="border-radius: 5px">
                        </div>
                    </div>
                    <div class="form-inline">
                        <label class="control-label col-sm-4" for="pwd">New Password:</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="NewPass" style="border-radius: 5px">
                        </div>
                    </div>
                    <div class="form-inline">
                        <label class="control-label col-sm-4" for="pwd">Connfirm New Password:</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="cNewPass" style="border-radius: 5px">
                        </div>
                    </div>
                    <br>
                    <div class="form-inline">
                        <div class="col-sm-4">@Html.ActionLink("Back to List", "Details", "User")</div>
                        <div class="col-sm-8">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                }
            </div>
        </div>
     </div>
